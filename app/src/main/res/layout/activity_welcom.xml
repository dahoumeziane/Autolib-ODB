<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/purple_200"
    android:orientation="vertical"
    tools:context=".init.WelcomAct">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo_yellow">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/monteserrat_semibold"
                android:text="Welcome to AutoLib !"
                android:textColor="#000"
                android:layout_marginBottom="20dp"
                android:textSize="30sp"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/monteserrat_semibold"
                    android:text="Initial distance"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>
                <EditText
                    android:background="@drawable/_5px_stroke_grey"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:hint="Set your initial distance"
                    android:inputType="number">

                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/monteserrat_semibold"
                    android:text="fuel level"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>
                <EditText
                    android:background="@drawable/_5px_stroke_grey"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:hint="Set initial fuel level"
                    android:inputType="number">

                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/monteserrat_semibold"
                    android:text="Temperature"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>
                <EditText
                    android:background="@drawable/_5px_stroke_grey"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:hint="Set initial temperature"
                    android:inputType="number">

                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/monteserrat_semibold"
                    android:text="Next oil change"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>
                <EditText
                    android:background="@drawable/_5px_stroke_grey"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:hint="Set the next distance for oil change"
                    android:inputType="number">

                </EditText>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="#fff"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:fontFamily="@font/monteserrat_semibold"
                    android:textStyle="bold"
                    android:text="Let's go"
                    android:background="@drawable/_5px_solid_orange">

                </androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>